<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Задание' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label 'Описание' %><br>
    <%= f.text_field :description %>
  </div>
  
    <div class="field">
    <%= f.label 'Категория' %><br>
     <%= f.select :category, options_for_select([['Категория 0' ,'Категория 0'], ['Категория 1', 'Категория 1'], ['Категория 2', 'Категория 2']], @task.category) %>
    </div> 
  
    <div class="field">
    <%= f.label 'Приоритет (1-9)' %><br>
    <%=  f.select :task_priority, options_for_select(1..9) %>
    </div> 
  
  <div class="actions">
    <%= f.submit 'Добавить задание' %>
  </div>
<% end %>
